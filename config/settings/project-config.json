{
  "project": {
    "name": "organizador-pessoal-tdah",
    "version": "1.0.0",
    "description": "Sistema de organização pessoal adaptado para TDAH",
    "structure": {
      "root": "/",
      "src": "/src",
      "public": "/public",
      "config": "/config",
      "docs": "/docs"
    }
  },
  "build": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "typescript": {
      "strict": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "next": {
      "reactStrictMode": true,
      "swcMinify": true,
      "experimental": {
        "serverActions": true
      }
    }
  },
  "dependencies": {
    "core": [
      "next",
      "react",
      "react-dom",
      "typescript"
    ],
    "ui": [
      "@mui/material",
      "tailwindcss",
      "postcss",
      "autoprefixer"
    ],
    "database": [
      "prisma",
      "mongoose"
    ],
    "validation": [
      "zod"
    ],
    "testing": [
      "jest",
      "@testing-library/react"
    ]
  },
  "scripts": {
    "standard": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start",
      "lint": "next lint",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage"
    },
    "custom": {
      "consolidate": "node sistema/automacao/consolidate-structure.js",
      "check": "node sistema/automacao/check-session.js",
      "security": "node sistema/automacao/security-protocol.js"
    }
  },
  "conventions": {
    "naming": {
      "files": "kebab-case",
      "components": "PascalCase",
      "functions": "camelCase",
      "constants": "UPPER_SNAKE_CASE"
    },
    "structure": {
      "components": {
        "ui": "/src/components/ui",
        "features": "/src/components/features",
        "layout": "/src/components/layout"
      },
      "pages": {
        "app": "/src/app",
        "api": "/src/app/api"
      }
    }
  },
  "security": {
    "auth": {
      "provider": "next-auth",
      "strategies": ["credentials", "oauth"]
    },
    "api": {
      "rate_limit": true,
      "cors": {
        "origin": ["http://localhost:3000"],
        "methods": ["GET", "POST", "PUT", "DELETE"]
      }
    }
  },
  "accessibility": {
    "wcag": "2.1",
    "level": "AA",
    "features": [
      "high-contrast",
      "font-size-control",
      "screen-reader-support",
      "keyboard-navigation"
    ]
  }
} 