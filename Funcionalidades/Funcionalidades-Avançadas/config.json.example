{
    "zenkit": {
        "api_endpoint": "https://api.zenkit.com/v1",
        "workspace_id": "seu-workspace-id",
        "sync_interval": 300,
        "auto_sync": true,
        "default_list": "Tarefas",
        "mappings": {
            "status": {
                "todo": "pending",
                "doing": "in_progress",
                "done": "completed"
            },
            "priority": {
                "1": "low",
                "2": "medium",
                "3": "high"
            }
        }
    },
    "energy_management": {
        "tracking_interval": 60,
        "default_energy_level": 7,
        "break_thresholds": {
            "long_break": 4,
            "medium_break": 6,
            "short_break": 8
        },
        "focus_periods": {
            "morning": {
                "start": "09:00",
                "end": "12:00"
            },
            "afternoon": {
                "start": "14:00",
                "end": "17:00"
            }
        },
        "break_durations": {
            "long": 30,
            "medium": 15,
            "short": 5
        }
    },
    "notifications": {
        "enabled": true,
        "channels": ["desktop", "browser"],
        "quiet_hours": {
            "start": "22:00",
            "end": "08:00"
        },
        "priority_levels": {
            "high": "immediate",
            "medium": "scheduled",
            "low": "batched"
        }
    },
    "integrations": {
        "calendar": {
            "provider": "google",
            "sync_enabled": true,
            "calendars": ["primary"]
        },
        "notes": {
            "provider": "notion",
            "sync_enabled": true,
            "workspace": "Personal"
        }
    },
    "study_optimization": {
        "pomodoro": {
            "work_duration": 25,
            "break_duration": 5,
            "long_break_duration": 15,
            "sessions_before_long_break": 4
        },
        "content_adaptation": {
            "preferred_formats": ["visual", "interactive"],
            "difficulty_progression": "adaptive",
            "review_intervals": [1, 3, 7, 14, 30]
        }
    },
    "health_tracking": {
        "metrics": [
            "mood",
            "energy",
            "sleep",
            "exercise",
            "medication",
            "nutrition"
        ],
        "reminder_frequency": {
            "mood": 240,
            "energy": 180,
            "medication": 360
        }
    },
    "accessibility": {
        "font_size": "medium",
        "color_scheme": "neutral",
        "reduced_motion": false,
        "high_contrast": false
    }
} 